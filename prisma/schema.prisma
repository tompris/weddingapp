generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Couple {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  displayTitle  String?
  photos        Photo[]
  createdAt     DateTime @default(now())
}

model Photo {
  id            Int      @id @default(autoincrement())
  url           String
  message       String?
  attendeeName  String?
  couple        Couple   @relation(fields: [coupleId], references: [id])
  coupleId      Int
  createdAt     DateTime @default(now())
}
